<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.interfazdinamicafxml.HelloController" alignment="TOP_LEFT" style="-fx-background-color: #8080d2">


    <Button fx:id="botonMenu" text="menu" onAction="#iniciarVbox"/>

    <VBox fx:id="vBox" style="-fx-background-color: #77da52" maxHeight="Infinity" maxWidth="70" translateX="-70">

        <Button fx:id="panel1" text="VerPanel1" onAction="#panel1"/>
        <Button fx:id="panel2" text="VerPanel2" onAction="#panel2"/>

    </VBox>

    <Label fx:id="labelInicial" text="Hola Panel Inicial" alignment="CENTER" style="-fx-background-color: yellow" translateX="+200" translateY="+200"/>

    <Label fx:id="label1" text="Hola Panel 1" alignment="CENTER" visible="false" style="-fx-background-color: yellow"/>

    <Label fx:id="label2" text="Hola Panel 2" alignment="CENTER" visible="false" style="-fx-background-color: yellow"/>

</StackPane>

